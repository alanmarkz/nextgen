{
  "name": "nextgenconvert",
  "displayName": "NextGen",
  "icon": "./logo.png",
  "description": "Convert images and videos to next gen formats supported by modern browsers ",
  "publisher": "alanmarkz",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "repository": {},
  "contributes": {
    "commands": [
      {
        "command": "fileConverter.convertToWebP",
        "title": "Convert to WebP"
      },
      {
        "command": "fileConverter.convertToAvif",
        "title": "Convert to AVIF"
      },
      {
        "command": "fileConverter.convertToWebM",
        "title": "Convert to WebM"
      },
      {
        "command": "fileConverter.convertToAvi",
        "title": "Convert to AVI"
      },
      {
        "command": "fileConverter.convertA",
        "title": "Convert assets to AVIF/AVI"
      },
      {
        "command": "fileConverter.convertW",
        "title": "Convert assets to WebP/WebM"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "fileConverter.convertW",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "fileConverter.convertA",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "fileConverter.convertToWebP",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg)$/i",
          "group": "navigation"
        },
        {
          "command": "fileConverter.convertToAvif",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg)$/i",
          "group": "navigation"
        },
        {
          "command": "fileConverter.convertToWebM",
          "when": "resourceExtname =~ /\\.(mp4|gif|mkv)$/i",
          "group": "navigation"
        },
        {
          "command": "fileConverter.convertToAvi",
          "when": "resourceExtname =~ /\\.(mp4|gif|mkv)$/i",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "postinstall": "node scripts/install-ffmpeg.js",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0"
  }
}
